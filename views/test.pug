extends layout

block content
  h1= title
  p Welcome to #{title}, a test for Infinidreams


  form(method='POST' action='' enctype='multipart/form-data')
    div.form-group
      label(for='title') Title:
      input#title.form-control(type='text', placeholder='Title' name='title' required='true')
    div.form-group
      label(for='summary') Summary:
      input#summary.form-control(type='text', placeholder='Title' name='summary' required='true')
    div.form-group
      label(for='image') Thumbnail:
      input#image.form-control(type='file', name='image')
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg